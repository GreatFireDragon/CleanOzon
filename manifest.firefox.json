{
  "manifest_version": 3,
  "name": "Чистый Ozon",
  "version": "0.2.2",
  "description": "Пользовательские стили и улучшения для www.ozon.ru",
  "author": "GreatFireDragon",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.ozon.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.ozon.ru/*", "https://www.ozon.ru/"],
      "css": ["css/general.css", "css/settings_styles.css", "css/listing_pages.css"],
      "js": ["js/settings.js"]
    },
    {
      "matches": ["https://www.ozon.ru/"],
      "css": ["css/main_page.css"]
    },
    {
      "matches": [
        "https://www.ozon.ru/my/orderlist*"
      ],
      "css": ["css/orderlist.css"]
    },
    {
      "matches": ["https://www.ozon.ru/product/*"],
      "css": ["css/product_page.css"]
    }
  ],



  "browser_specific_settings": {
    "gecko": {
      "id": "{8ab1db50-b280-4711-bd75-68e4bad4aeee}"
    }
  }
}